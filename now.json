{
  "name": "po-share",
  "github": {
    "enabled": false
  },
  "version": 2,
  "builds": [
    {
      "src": "packages/web/package.json",
      "use": "@now/next"
    },
    {
      "src": "packages/graphql-server/src/index.ts",
      "use": "@now/node"
    }
  ],
  "routes": [
    { "src": "/graphql", "dest": "packages/graphql-server/src/index.ts" },
    { "src": "^/(.*)$", "dest": "/packages/web/$1" }
  ]
}
