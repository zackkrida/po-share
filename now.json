{
  "name": "po-share",
  "version": 2,
  "regions": ["cle"],
  "env": {
    "DB_NAME": "@po_db_name",
    "DB_USER": "@po_db_user",
    "DB_PASSWORD": "@po_db_password",
    "DB_HOST": "@po_db_host",
    "DB_PORT": "@po_db_port",
    "DB_SCHEMAS": "@po_db_schemas",
    "JWT_SECRET": "@po_jwt_secret"
  },
  "builds": [
    {
      "src": "packages/web/next.config.js",
      "use": "@now/next"
    },
    {
      "src": "packages/graphql-server/dist/index.js",
      "use": "@now/node"
    }
  ],
  "routes": [
    { "src": "/graphql", "dest": "packages/graphql-server/dist/index.js" },
    { "src": "^/(.*)$", "dest": "/packages/web/$1" }
  ]
}
